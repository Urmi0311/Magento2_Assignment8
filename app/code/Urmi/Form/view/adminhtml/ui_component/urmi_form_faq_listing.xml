<?xml version="1.0" ?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">urmi_form_faq_listing.urmi_form_faq_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <deps>
            <dep>urmi_form_faq_listing.urmi_form_faq_listing_data_source</dep>
        </deps>
        <spinner>
            urmi_form_faq_columns
        </spinner>
    </settings>
    <dataSource name="urmi_form_faq_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Urmi_Form::faq</aclResource>
        <dataProvider name="urmi_form_faq_listing_data_source" class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <columns name="urmi_form_faq_columns">
        <column name="id">
            <settings>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="question">
            <settings>
                <label translate="true">Question</label>
            </settings>
        </column>
        <column name="answer">
            <settings>
                <label translate="true">Answer</label>
            </settings>
        </column>
        <column name="is_published" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <label translate="true">Is Published</label>
                <options class="Magento\Config\Model\Config\Source\Yesno" />
                <dataType>select</dataType>
            </settings>
        </column>
        <column name="created_at" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <label translate="true">Created At</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Urmi\Form\Ui\Component\Listing\Column\Actions">

        </actionsColumn>
    </columns>
</listing>
